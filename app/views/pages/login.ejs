<!DOCTYPE html>
<html lang="en">

<head>
	<%- partial("./partials/head"); %>
	<link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
	<link href="https://fonts.googleapis.com/css?family=Patua+One" rel="stylesheet">
	<style>
		.panel-default {
			text-align: center;
			background: #56CCF2;  /* fallback for old browsers */
			background: -webkit-linear-gradient(to right, #2F80ED, #56CCF2);  /* Chrome 10-25, Safari 5.1-6 */
			background: linear-gradient(to right, #2F80ED, #56CCF2); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
			color: #fff;
		}
		h3 {
			font-family: 'Patua One', cursive;
		}
	</style>
</head>

<body>
	<nav>
		<%- partial("./partials/navigator"); %>
	</nav>
	<main>
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-offset-4 col-sm-12" style="margin-top: 10%">
					<div class="panel panel-default">
						<h3>WELCOME</h3>
						<div class="panel-body">
							<form accept-charset='UTF-8' method='POST' role='form'>
								<div class="form-group">
									<input type="text" name="username" class="form-control" placeholder="Username">
								</div>
								<div class="form-group">
									<input type="password" name="password" class="form-control" placeholder="Password" value="">
								</div>

								<!-- <%
                      var infoHidden = "hidden";
                      var msg = "";
                      if (typeof message !== 'undefined') {
                        infoHidden = "";
                        msg = message;
                      }
                    %>
  
                    <span <%=infoHidden%>>
                      <a href="" class="glyphicon glyphicon-warning-sign"></a>
                      &nbsp;
                      <%=msg%>
                    </span> -->

								<div class='checkbox'>
									<label>
										<input type='checkbox' value='Remember Me'> Remember Me
									</label>
								</div>
								<div class="form-group">
									<input type="submit" name="" class="btn btn-success btn-md btn-lock" value="Login">
								</div>
							</form>
							<div class="form-group">
								<p>Don't have an account? <a href="/signup">Sign up.</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</body>

</html>